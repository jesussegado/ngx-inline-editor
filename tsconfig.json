{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "noLib": false,
    "lib": [
      "es2016"
    ],
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ],
  "compileOnSave": false
}
