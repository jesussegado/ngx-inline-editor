{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom",
      "es2017.object"
    ],
    "skipLibCheck": true,
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "base.spec.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
